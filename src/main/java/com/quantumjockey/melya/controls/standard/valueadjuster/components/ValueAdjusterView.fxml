<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<fx:root type="javafx.scene.layout.VBox" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.quantumjockey.melya.controls.standard.valueadjuster.components.ValueAdjusterController">
   <children>
      <HBox styleClass="hbox-2">
          <children>
              <Button onAction="#decrement" text="-" />
              <TextField fx:id="value" />
              <Button onAction="#increment" text="+" />
          </children>
      </HBox>
      <Slider fx:id="adjustment" />
   </children>
</fx:root>
